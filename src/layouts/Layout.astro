---
interface Props {
  title?: string;
}

const { title } = Astro.props;
import { ViewTransitions } from "astro:transitions";
import Header from "@/core/Header/index.astro";
import Footer from "@/core/Footer/index.astro";
import styles from "@/styles/layout.module.scss";
import "@/styles/globals.scss";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Engineer and designer based in Arizona. CSS wizard. Building slick and accessible 
      interfaces for brilliant ideas."
    />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    <meta name="viewport" content="width=device-width" />

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#ffffff" />

    <title>Rajbir Johar {title && `| ${title}`}</title>
    <ViewTransitions />
  </head>
  <body>
    <Header />
    <main class={styles.main}>
      <div class={styles.grid}>
        <slot />
      </div>
    </main>
    <div class="divider"></div>
    <Footer />
    <div class="gradient"></div>
  </body>
</html>
